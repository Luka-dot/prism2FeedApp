// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Feed {
  id String @id
  name String
  url String @unique
  author User? @relation("FeedAuthor", fields: [authorId])
  authorId String?
  tags FeedTag[]
}

model Bundle {
  id String @id
  name String
  description String
  author User? @relation("BundleAuthor", fields: [authorId])
  authorId String?
  tags BundleTag[]
}

model User {
  id String @id
  auth0 String @unique
  nickname String?
  picture String?
  feeds Feed[] @relation("FeedAuthor")
  bundles Feed[] @relation("BundleAuthor")
}

model SavedArticle {
  id String @id
  content Json
}

model BundleTag {
  is String @id
  name String @unique
  bundles Bundle[]
}

model FeedTag {
  is String @id
  name String @unique
  feeds Feed[]
}